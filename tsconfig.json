{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022",
    "jsx": "react",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist/assets/scripts",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
